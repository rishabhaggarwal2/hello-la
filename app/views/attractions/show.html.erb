<%= content_tag :section, class:"header-image" do %>
  <%= content_tag :h1, class:'floating-name', data:{image:asset_path(@attraction.image_name)} do %>
    <%= content_tag :span, class:'tag-icon' do %>
      <%= link_to category_helper(@attraction) do %>
        <%= image_tag tag_icon_helper(@attraction) %>
      <% end %>
    <% end %>
    <%= @attraction.title %><br />
    <%= content_tag :span, class:'subtitle' do %>
      <%= @attraction.subtitle %>
    <% end %>
  <% end %>
<% end %>
<%= render 'attraction_sections', :attraction => @attraction %>
